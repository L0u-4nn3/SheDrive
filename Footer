AJOUTER function shedrive_enqueue_styles() {
    wp_enqueue_style('shedrive-footer-styles', get_template_directory_uri() . '/css/footer.css', [], '1.0.0', 'all'); // Assurez-vous de mettre le chemin correct
}
add_action('wp_enqueue_scripts', 'shedrive_enqueue_styles');

